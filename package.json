{
  "name": "pyramidscheme",
  "displayName": "pyramidScheme",
  "description": "For freaks who like to format their Typescript code using the Pyramid Scheme convention.",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.56.0"
  },
  "publisher": "vincentneel",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pikanezi/pyramid"
  },
  "icon": "icon.png",
  "license": "MIT",
  "activationEvents": [
    "onCommand:pyramidscheme.buildPyramid"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyramidscheme.buildPyramid",
        "title": "Build a pyramid"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
